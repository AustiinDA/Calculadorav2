<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutCramer2x2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- The ActionBar displayed at the top -->

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- The main content view where fragments are loaded -->
        <FrameLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_theme_dark_background"
                tools:context=".Cramer2x2">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="="
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
                    app:layout_constraintEnd_toStartOf="@+id/tableLayout2"
                    app:layout_constraintStart_toEndOf="@+id/tableLayout"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.355" />

                <TextView
                    android:id="@+id/tv_resulX"
                    android:layout_width="104dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/entrada_custom"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btnCramer2x2"
                    app:layout_constraintEnd_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout"
                    app:layout_constraintVertical_bias="0.517" />

                <TextView
                    android:id="@+id/tv_resulY"
                    android:layout_width="120dp"
                    android:layout_height="43dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/entrada_custom"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_resulX"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_resulX"
                    app:layout_constraintVertical_bias="1.0" />

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:layout_width="123dp"
                    android:layout_height="163dp"
                    android:layout_marginTop="44dp"
                    android:stretchColumns="*"
                    android:weightSum="2"

                    app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tableLayout"
                    app:layout_constraintVertical_bias="1.0">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/EtC1"
                            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entrada_custom"
                            android:ems="0"
                            android:inputType="numberSigned|number"
                            android:singleLine="false"
                            android:textColor="#F07C18" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/EtC2"
                            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entrada_custom"
                            android:ems="0"
                            android:inputType="numberSigned|number"
                            android:singleLine="false"
                            android:textColor="#F07C18" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="223dp"
                    android:layout_height="161dp"
                    android:layout_marginStart="16dp"

                    android:layout_marginTop="44dp"
                    android:stretchColumns="*"
                    android:weightSum="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="92dp">

                        <EditText
                            android:id="@+id/edtA1"
                            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entrada_custom"
                            android:ems="0"
                            android:inputType="numberSigned|number"
                            android:singleLine="false"
                            android:textColor="#F07C18" />

                        <EditText
                            android:id="@+id/edtY1"
                            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entrada_custom"
                            android:ems="0"
                            android:inputType="numberSigned|number"
                            android:singleLine="false"
                            android:textColor="#F07C18" />

                    </TableRow>

                    <TableRow

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etA3"
                            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entrada_custom"
                            android:ems="0"
                            android:inputType="numberSigned|number"
                            android:singleLine="false"
                            android:textColor="#F07C18" />

                        <EditText
                            android:id="@+id/etY3"
                            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entrada_custom"
                            android:ems="0"
                            android:inputType="numberSigned|number"
                            android:singleLine="false"
                            android:textColor="#F07C18" />

                    </TableRow>

                </TableLayout>

                <Button
                    android:id="@+id/btnCramer2x2"
                    android:layout_width="368dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="204dp"
                    android:text="CALCULAR"
                    app:cornerRadius="15px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:text="X="
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btnCramer2x2"
                    app:layout_constraintEnd_toStartOf="@+id/tv_resulX"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout"
                    app:layout_constraintVertical_bias="0.528" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="12dp"
                    android:text="Y="
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btnCramer2x2"
                    app:layout_constraintEnd_toStartOf="@+id/tv_resulY"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
                    app:layout_constraintVertical_bias="0.529" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:text="="
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/tableLayout" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navVistaC"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer_nav" />
</androidx.drawerlayout.widget.DrawerLayout>