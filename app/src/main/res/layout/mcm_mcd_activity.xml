<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_inverseSurface"
    tools:context=".mcd_mcm">


    <TextView
        android:id="@+id/textoResul2"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textoDescripcion6"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toEndOf="@+id/etNum1"
        app:layout_constraintTop_toBottomOf="@+id/textoDescripcion2" />

    <TextView
        android:id="@+id/textoResul1"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
        app:layout_constraintEnd_toStartOf="@+id/textoDescripcion5"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/etNum2"
        app:layout_constraintTop_toBottomOf="@+id/textoResul2"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/textoDescripcion6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="MCM"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textoResul2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textoResul2" />

    <TextView
        android:id="@+id/textoDescripcion5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="MCD"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textoResul1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textoResul1" />

    <TextView
        android:id="@+id/textoDescripcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Introduce dos números: "
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <EditText
        android:id="@+id/etNum1"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Número 1"
        android:inputType="textPersonName"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoDescripcion2" />

    <EditText
        android:id="@+id/etNum2"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Número 2"
        android:inputType="textPersonName"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNum1" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="257dp"
        android:layout_height="77dp"
        android:layout_marginTop="384dp"
        android:text="CALCULAR"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="386dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#4E3180"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal"
            android:text="Calculadora de máximo común divisor y mínimo común múltiplo"
            android:textAlignment="gravity"
            android:textColor="@color/md_theme_dark_onSecondaryContainer"
            android:textSize="20sp"
            android:typeface="sans" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

